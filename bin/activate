#!/usr/bin/env bash

deactivate () {
    if [[ -n "${_OLD_PATH:-}" ]] ; then
        PATH="${_OLD_PATH:-}"
        export PATH
        unset _OLD_PATH
    fi

    if [[ -n "${BASH:-}" || -n "${ZSH_VERSION:-}" ]] ; then
        hash -r
    fi

    if [[ ! "$1" = "nondestructive" ]] ; then
        unset -f deactivate
        unset -f get
        unset -f up
    fi
}

get () {
    go get -mod= $@
}

up () {
    get -u $@
    make deps-main
}

deactivate nondestructive

_OLD_PATH="${PATH}"
PATH="$(cd `dirname ${0}` && pwd):${PATH}"
export PATH

if [[ -n "${BASH:-}" || -n "${ZSH_VERSION:-}" ]] ; then
    hash -r
fi
